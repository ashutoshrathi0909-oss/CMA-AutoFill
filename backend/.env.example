# Backend Environment Variables
# Copy this file to .env and fill in the real values
# NEVER commit .env to git!

# ── Supabase ─────────────────────────────────────────────────────────────────
SUPABASE_URL=https://yamcnvkwidxndxwaskoc.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ── Google Gemini AI ──────────────────────────────────────────────────────────
GOOGLE_API_KEY=your_google_ai_studio_api_key_here

# LLM Model names (NEVER hardcode these — change here to switch models)
LLM_EXTRACTION_MODEL=gemini-2.0-flash
LLM_CLASSIFICATION_MODEL=gemini-2.0-flash

# ── Resend (email) ────────────────────────────────────────────────────────────
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# ── JWT (for local token verification instead of calling Supabase) ────────────
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# ── App Config ────────────────────────────────────────────────────────────────
ENVIRONMENT=development          # development | production | test
APP_VERSION=1.0.0
LOG_LEVEL=DEBUG                  # DEBUG | INFO | WARNING | ERROR (use INFO in production)
DEBUG=true
FRONTEND_URL=http://localhost:3000
ADMIN_EMAIL=admin@yourfirm.com

# ── CORS (production only — comma-separated origins) ─────────────────────────
# ALLOWED_ORIGINS=https://cma-autofill.vercel.app

# ── Rate Limiting ────────────────────────────────────────────────────────────
RATE_LIMIT_ENABLED=true
